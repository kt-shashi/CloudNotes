<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/design_dialog"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="15dp"
        android:padding="15dp"
        android:text="@string/enter_new_note"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/edit_text_alert_dialog_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        android:hint="@string/enter_new_note"
        android:inputType="textPersonName"
        android:textSize="23sp" />

    <Button
        android:id="@+id/button_alert_dialog_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_ripple_click"
        android:fontFamily="@font/gilda_display"
        android:padding="15dp"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:textStyle="bold" />

</LinearLayout>